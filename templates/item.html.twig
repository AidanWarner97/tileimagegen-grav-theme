{% extends 'partials/base.html.twig' %}

{% block content %}
    <h1>{{ page.title }}</h1>
    <div id="blog-data">
        <p>{{ page.date|date("d M Y") }} by {{ page.header.author|raw }}</p>
        <span id="break"></span>
        {{ page.content|raw }}
    </div>
    <p><a href="{{ page.parent.url }}">Back to Blog</a></p>
{% endblock %}
